<%- include("partials/head") %>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <header class="p-10 bg-gray-200 mb-5 shadow-md">
      <h1 class="text-3xl font-bold text-center text-gray-900">
        Register Your Home Here
      </h1>
    </header>
    <main class="max-w-4xl mx-auto">
      <form
        action="/host/registered-successfully"
        method="POST"
        class="mt-10 bg-white p-6 rounded-lg shadow-md"
      >
        <div class="mb-6">
          <label
            for="houseName"
            class="block text-lg font-medium text-gray-700 mb-2"
            >House Name</label
          >
          <input
            type="text"
            id="houseName"
            name="houseName"
            placeholder="Enter the name of your house"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600"
            required
          />
        </div>
        <div
          class="flex justify-center items-center flex-col text-center w-full"
        >
          <input
            type="submit"
            value="Register"
            class="bg-gradient-to-br from-amber-600 to-pink-600 py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition cursor-pointer w-40"
          />
          <a
            href="/"
            class="bg-gradient-to-br from-amber-600 to-pink-600 py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition cursor-pointer mt-2 w-40"
          >
            Go Home
          </a>
        </div>
      </form>
    </main>
  </body>
</html>
