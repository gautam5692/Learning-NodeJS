<%- include("partials/head") %>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <header class="p-10 bg-gray-200 mb-5 shadow-md">
      <nav></nav>
      <h1 class="text-3xl font-bold text-center text-gray-900">
        Welcome to Airbnb
      </h1>
    </header>
    <main class="max-w-4xl mx-auto">
      <a
        href="/host/add-home"
        class="bg-gradient-to-br from-amber-600 to-pink-600 mx-auto block w-fit py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition"
      >
        Add Home
      </a>
      <div class="mt-10 bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-bold text-2xl text-gray-800 mb-4">
          Here are your registered homes
        </h2>
        <div class="max-h-64 overflow-y-auto">
          <ol class="space-y-3 list-decimal">
            <% registeredHomes.forEach((home, index) => { %>
            <li class="flex items-center bg-gray-100 p-3 rounded-lg shadow-sm">
              <span class="mr-3 text-amber-600 font-bold"
                ><%= index + 1 %>.</span
              >
              <span class="text-gray-700"><%= home.houseName %></span>
            </li>
            <% }) %>
          </ol>
        </div>
      </div>
    </main>
  </body>
</html>
