<%- include("partials/head") %>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <header>
      <h1 class="text-3xl font-bold text-center text-gray-900 p-10 bg-gray-200 mb-5 shadow-md">
        Welcome to Airbnb
      </h1>
      <a href="/host/add-home"
        class="bg-gradient-to-br from-amber-600 to-pink-600 mx-auto block w-fit py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition">
        Add Home
      </a>
    </header>
    <main class="max-w-6xl mx-auto">
      <!-- Add Home Button -->


      <!-- Registered Homes Section -->
      <div class="mt-10 bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-bold text-2xl text-gray-800 mb-4">
          Here are your registered homes
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach((home, index)=> { %>
            <!-- Home Card -->
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200">
              <img class="w-full h-48 object-cover" src="<%= home.homeImage %>" alt="Home Image">

              <div class="p-4">
                <h2 class="text-xl font-semibold text-gray-800 mb-2">
                  <%= home.houseName %>
                </h2>
                <p class="text-sm text-gray-500 mb-2">
                  <%= home.location %>
                </p>

                <div class="flex items-center justify-between mb-4">
                  <span class="text-lg font-bold text-green-600">
                    Rs. <%= home.price %>
                  </span>
                  <div class="flex items-center text-yellow-500">
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                      <path
                        d="M10 15l-5.878 3.09 1.122-6.545L.488 6.91l6.561-.955L10 0l2.951 5.955 6.561.955-4.756 4.635 1.122 6.545z" />
                    </svg>
                    <span class="ml-1 text-sm text-gray-700">
                      <%= home.rating %>
                    </span>
                  </div>
                </div>

                <button class="w-full bg-blue-600 text-white py-2 rounded-xl hover:bg-blue-700 transition font-medium">
                  View Details
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </main>
  </body>

  </html>