<%- include("../partials/head") %>
</head>

<body>
  <%- include("../partials/host_header") %>
  <h1 class="text-3xl font-bold text-center p-10">Host Home List</h1>
  <% if(registeredHomes[0] == undefined) { %>
  <h2 class="font-bold text-2xl text-gray-800 mb-4 ml-4">
    Host Home List is empty
  </h2>
  <% } else { %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="font-bold text-2xl text-gray-800 mb-4">
      Here is your home list
    </h2>
    <div>
      <% registeredHomes.forEach((home, index)=> { %>
      <!-- Home Card -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 w-1/4 mr-2 inline-block align-top group">
        <div class="relative">
          <img class="w-full h-48 object-cover" src="<%= home.homeImage %>" alt="Home Image">
          <button class="absolute inset-0 flex items-baseline-last justify-around backdrop-blur-sm bg-white/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="pointer-events: auto;">
            <span class="bg-blue-300 text-gray-700 font-semibold rounded-2xl px-6 py-2 shadow-lg hover:bg-blue-400 cursor-pointer transition">
              Edit
            </span>
            <span class="bg-red-300 text-gray-700 font-semibold rounded-2xl px-6 py-2 shadow-lg hover:bg-red-400 cursor-pointer transition">
              Delete
            </span>
          </button>
        </div>
        <div class="p-4">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            <%= home.houseName %>
          </h2>
          <p class="text-sm text-gray-500 mb-2">
            <%= home.location %>
          </p>
          <div class="flex items-center justify-between mb-4">
            <span class="text-lg font-bold text-green-600">
              Rs. <%= home.price %>
            </span>
            <div class="flex items-center text-yellow-500">
              <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.122-6.545L.488 6.91l6.561-.955L10 0l2.951 5.955 6.561.955-4.756 4.635 1.122 6.545z" />
              </svg>
              <span class="ml-1 text-sm text-gray-700">
                <%= home.rating %>
              </span>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>
</body>

</html>