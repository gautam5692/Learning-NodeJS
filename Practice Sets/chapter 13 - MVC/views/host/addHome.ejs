<%- include("../partials/head") %>
</head>

<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/host_header') %>
  <h1 class="text-3xl font-bold text-center p-10">
    Register Your Home Here
  </h1>
  <main class="max-w-4xl mx-auto">
    <form action="/host/homeRegistered" method="POST" class=" bg-white p-6 rounded-lg shadow-md">
      <div class="mb-6">
        <label for="houseName" class="inline-block w-60 text-lg font-medium text-gray-700 mb-2">House Name</label>
        <input type="text" id="houseName" name="houseName" placeholder="Enter the name of your house" class="w-100 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600" required />
        <br><br>
        <label for="price" class="inline-block w-60 text-lg font-medium text-gray-700 mb-2">Price per night (Rs.):
        </label>
        <input type="number" name="price" id="price" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600" placeholder="Price per night">
        <br><br>
        <label for="locations" class="inline-block w-60 text-lg font-medium text-gray-700 mb-2">Choose a rental
          location: </label>
        <input type="text" name="location" id="location" placeholder="Entere the location here" class="w-100 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600" required>
        <br><br>
        <label for="rating" class="inline-block w-60 text-lg font-medium text-gray-700 mb-2">Rating:</label>
        <input type="number" name="rating" id="rating" step="any" min="0.5" max="5.0" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600" placeholder="Rating">
        <br><br>
        <label for="homeImage" class="inline-block w-60 text-lg font-medium text-gray-700 mb-2">
          Upload an image
        </label>
        <input type="text" id="homeImage" name="homeImage" placeholder="Paste the image link here" class="w-100 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-600" required />

      </div>
      <div class="flex justify-between items-center flex-row text-center w-full">
        <a href="/" class="block bg-gradient-to-br from-amber-600 to-pink-600 py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition cursor-pointer">
          Return to Home
        </a>
        <input type="submit" value="Register" class="block bg-gradient-to-br from-amber-600 to-pink-600 py-2 px-6 text-white rounded-2xl shadow-lg hover:shadow-xl hover:opacity-90 transition cursor-pointer" />
      </div>
    </form>
  </main>
</body>

</html>